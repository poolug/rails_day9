<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>

<h1>Mi Biblioteca</h1>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th><%= sort_link(@q, :title, 'Título') %></th>
        <th>Autor</th>
        <th>Estado</th>
        <th>Fecha de Préstamo</th>
        <th>Fecha de Devolución</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.status %></td>
          <td><%= book.lend_date %></td>
          <td><%= book.return_date %></td>
          <td><%= link_to 'Ver', book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Nuevo Libro', new_book_path, class: 'btn btn-success' %>
