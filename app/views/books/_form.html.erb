<%= form_with(model: book, local: true) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h1>El libro "<%= book.title %>" no ha sido creado por las siguientes razones:</h1>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <strong><%= f.label :title, "Titulo" %></strong>
    <%= f.text_field :title, placeholder: "Ingresa un TÃ­tulo", class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong><%= f.label :author, "Autor" %></strong>
    <%= f.text_field :author, placeholder: "Ingresa un Autor", class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong><%= f.label :status, "Estado" %></strong><br>
    <%= f.select :status, options_for_select(@statuses), class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong><%= f.label :lend_date, "Fecha de Prestamo" %></strong>
    <%= f.date_field :lend_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong><%= f.label :return_date,"Fecha de Devolucion" %></strong>
    <%= f.date_field :return_date, class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= submit_tag "Crear Libro", class: 'btn btn-success' %>
    <%= link_to 'Ver biblioteca', root_path, class: 'btn btn-primary' %>
  </div>
<% end %>